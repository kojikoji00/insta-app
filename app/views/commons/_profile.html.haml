.header_logout
  %p.notice= notice
  %p.alert= alert
  - if user_signed_in?
    = link_to 'ログアウト', destroy_user_session_path, data: {method: 'delete' }

.profile
  .profile_name
    = user.display_name

.profile_image_container
  - if user == current_user
    = form_with(model: @profile, url: profile_path, method: 'put', remote: true) do |f|
      = image_tag user.avatar_image, class: 'profile_avatar', id: 'profile_avatar_prev'
      = f.file_field :avatar, class: "image", style: "display:none;", id: "file"
      -# = f.file_field :avatar, class: "image", style: "display:none;", id: "file"
      = f.submit '保存', class: 'btn-secondary', style: "display:none;", id: 'file-btn'

.follow
  - if current_user&.has_followed?(user)
    = link_to 'Unfollow', account_unfollows_path(user), data: {method: 'post'}
  - else
    = link_to 'Follow', account_follows_path(user), data: {method: 'post'}

.count_container
  %ul
    %li.count_posts
      = user.articles.to_a.count
      %p Posts
    -# %span= user.article_count
    %li.count_followers
      = user.followers.to_a.count
      %p Followers
    %li.count_following
      = user.followings.to_a.count
      %p Following

